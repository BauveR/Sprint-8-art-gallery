{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,

    "allowJs": false,
    "types": ["vite/client"]
  },
  "include": ["src", "vite.config.ts"]
}
